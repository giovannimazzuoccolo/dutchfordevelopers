{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
        "noImplicitThis": true,
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "types": [
            "@nuxt/types",
            "@nuxtjs/axios",
            "@types/node",
            "@types/dom",
            "@nuxt/content",
            "jest"
        ]
    },
    "exclude": ["node_modules", ".nuxt", "dist"]
}
